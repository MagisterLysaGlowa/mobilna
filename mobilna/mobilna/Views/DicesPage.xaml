<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobilna.Views.DicesPage"
             Title="Kości">
    <StackLayout BackgroundColor="Beige" Spacing="25" Orientation="Vertical">
        <Label Text="Gra w kości. Autor Pesel" BackgroundColor="Brown" FontSize="Title" TextColor="White" Padding="0,3,0,3" Margin="0,10,0,0"/>
        <Button Text="RZUT KOŚĆMI" BackgroundColor="Chocolate" TextColor="White" HorizontalOptions="Center" Clicked="RollDices_Clicked" CornerRadius="5"/>
        <FlexLayout Padding="5,-10,5,-10" BackgroundColor="white">
            <Image x:Name="Dice0" FlexLayout.Basis="20%" Margin="5,0,5,0"/>
            <Image x:Name="Dice1" FlexLayout.Basis="20%" Margin="5,0,5,0"/>
            <Image x:Name="Dice2" FlexLayout.Basis="20%" Margin="5,0,5,0"/>
            <Image x:Name="Dice3" FlexLayout.Basis="20%" Margin="5,0,5,0"/>
            <Image x:Name="Dice4" FlexLayout.Basis="20%" Margin="5,0,5,0"/>
        </FlexLayout>
        <Button Text="RESETUJ WYNIK" BackgroundColor="Chocolate" TextColor="White" HorizontalOptions="Center" Clicked="ResetGame_Clicked" CornerRadius="5"/>
        <Label Text="Wynik tego losowania: " x:Name="rollResult_label" HorizontalTextAlignment="Center"/>
        <Label Text="Wynik gry: " x:Name="gameResult_label" HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>